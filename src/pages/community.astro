---
import BarMenu from "@components/barMenu.astro";
import Navbar from "@components/navbar.astro";
import AuthLayout from "@layouts/AuthLayout.astro";
import Challenge from "@components/challenge.astro";
---

<AuthLayout>
  <Navbar title="Comunidad" />

  <section id="community-tab">
    <div class="tabs">
      <a>
        <p>PRÁCTICA</p>
      </a>
    </div>
    <div class="tabs">
      <a>
        <p>ACTIVIDAD</p>
      </a>
    </div>
  </section>

  <section class="inviteFriends">
    <div class="imagesContainer">
      <img src="/blueBubble.png" id="blueBubble" />
      <img src="/monsterFriends.png" id="monsterFriends" alt="Invite Friends" />
    </div>

    <div class="textContainer">
      <p class="container-title">Comparte la diversión ¡Invita a un amigo!</p>
      <button type="button" class="button-style">INVITAR AHORA</button>
    </div>
  </section>

  <Challenge
    title="Desafío de código"
    paragraph="Elige tu lenguaje de programación y selecciona a un oponente para probar tu poder"
  />

  <BarMenu />
</AuthLayout>

<style>
  body {
    background: #f1edfa;
  }

  #community-tab {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #c9c0de;
    height: 70px;
    margin-bottom: 1rem;
  }
  .tabs {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50%;
    height: 100%;
    border-bottom: 4px solid #240E59;
    cursor: pointer;
  }
  .tabs:first-child {
    background-color: #f1edfa;
  }
  .tabs:nth-child(2) {
    border-bottom: none;
  }
  
  .tabs a p {
    font-weight: 600;
    font-size: 1.4rem;
    color: #240e59;
  }

  .inviteFriends {
    position: relative;
    box-sizing: border-box;
    width: 90%;
    height: 150px;
    background: #f1edfa;
    box-shadow: 2px 4px 10px #d5c1fa;
    margin: 0 auto;
    --invite-container-width: 90%;
    --invite-container-height: 150px;
    display: flex;
    flex-direction: row;
    padding: 1rem;
    transition: transform 0.2s;
    border-radius: 20px;
    overflow: hidden;
    z-index: 2;

    /* dejar espacio para el "borde" interno */
    z-index: 0;
    background-clip: padding-box; /* importante */
  }

  .inviteFriends::before {
    content: "";
    position: absolute;
    inset: 0; /* ocupa todo el elemento */
    padding: 2px; /* grosor del borde */
    border-radius: inherit; /* respeta el mismo radius */
    background: linear-gradient(
      156.25deg,
      #825d97 0%,
      #ab4afd 50%,
      #482d8a 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    z-index: 0;
  }

  .imagesContainer {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .textContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    width: 60%;
    height: 100%;
  }

  .inviteFriends #blueBubble {
    position: absolute;
    height: var(--invite-container-height);
    z-index: -10;
    left: -15px;
  }
  .inviteFriends #monsterFriends {
    position: absolute;
    min-width: 205px;
    height: auto;
    z-index: -3;
    left: -19px;
    top: -22px;
  }

  .container-title {
    font-style: normal;
    font-weight: 400;
    font-size: 1.8ch;
    line-height: 19px;
    text-align: center;
    text-wrap-mode: pretty;
    color: #171155;
  }

  .button-style {
    background: #da9d4f;
    font-style: normal;
    font-weight: 800;
    font-size: 1.5ch;
    color: #f1edfa;
    width: 100%;
    height: 46px;
    box-shadow: inset 0px -4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 10px;
  }

  .button-style:hover {
    background-color: #c87c2a;
    color: #fff;
  }
</style>
