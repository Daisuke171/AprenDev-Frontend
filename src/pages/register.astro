import BackBtn from "@components/register-login/backBtn.astro";
import AuthLayout from "@layouts/AuthLayout.astro";
import Bubble from "@components/register-login/bubble.astro";
---

<AuthLayout title="Register">
  <BackBtn />
  
  <Bubble />
  <RegisterForm client:load />
</AuthLayout>

<style>
  body {
    padding: 2rem;
    background: linear-gradient(150.69deg, #7D63A0 -3.28%, #5A3C92 55.4%, #482D8A 114.09%);
