<style>
  .lesson {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
    padding: 0 25px;
    margin-top: 10px;
    margin-bottom: 50px;
    overflow-y: scroll;
  }

  .lesson h1 {
    font-family: "Raleway";
    font-style: normal;
    font-weight: 700;
    font-size: 3ch;
    line-height: 30px;
    color: #171155;
    margin-top: 15px;
    margin-bottom: 10px;
  }

  .lesson p {
    font-family: "Raleway";
    font-style: normal;
    font-weight: 400;
    font-size: 1.7ch;
    line-height: 16px;

    color: #171155;
  }

  .lesson ul {
    font-family: "Raleway";
    font-style: normal;
    font-weight: 400;
    font-size: 1.7ch;
    line-height: 16px;

    color: #171155;
    margin-left: 20px;
    margin-bottom: 15px;
    list-style: disc;
    padding-left: 20px;
  }

  .lesson pre {
    background: #0f1220;
    color: #e6e6eb;
    font-family: "Fira Code", "JetBrains Mono", monospace;
    font-size: 1.6ch;
    line-height: 1.6;
    padding: 16px 18px;
    border-radius: 12px;
    width: 100%;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08);
    overflow-x: auto;
  }

  /* optional: subtle left accent */
  .lesson pre {
    border-left: 4px solid #da9d4f;
  }

  /* optional: code text a bit brighter */
  .lesson pre code {
    color: #ffffff;
  }

  .button-style, .choiceContainer button, .btnContainer button {
    background: #da9d4f;
    font-style: normal;
    font-weight: 700;
    font-size: 2.7ch;
    color: #f1edfa;
    width: fit-content;
    height: 60px;
    padding: 0 100px;
    box-shadow: inset 0px -4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 10px;
    margin: 0 auto;
    margin-top: 20px;
    justify-content: center;
    align-items: center;
    display: flex;
    cursor: pointer;
  }

  .choiceContainer {
    display: flex;
    gap: 20px;
    margin-top: 20px;
    width: 100%;
  }
  .choiceContainer button{
    padding: 0 10px;
    min-width: 60px;
    font-size: 1.8ch;
  }
  .btnContainer {
    display: flex;
    gap: 20px;
    margin-top: 20px;
    width: 100%;
  }
  .btnContainer button {
    padding: 0 10px;
    min-width: 60px;
    font-size: 1.8ch;
  }
  
</style>
