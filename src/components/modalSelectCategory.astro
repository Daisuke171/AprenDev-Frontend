---
const { items = [] } = Astro.props;
---

<section id="weapon-modal" class="modal-overlay hidden">
  <div class="modal">
    <h2>Selecciona tu arma</h2>

    <ul class="list">
      {items.map((item) => (
        <li class="card">
          <img src={item.img} alt={item.title} />
          <span>{item.title}</span>
        </li>
      ))}
    </ul>

    <button id="close-modal" class="close">Cerrar</button>
  </div>
</section>

<style>
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  display: grid;
  place-items: center;
  z-index: 2000;
}

.hidden {
  display: none;
}

.modal {
  width: 320px;
  background: #f6f2ff;
  border-radius: 18px;
  padding: 1.25rem;
}

.list {
  list-style: none;
  padding: 0;
  margin: 1rem 0;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
}

.card {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.6rem;
  border-radius: 12px;
  border: 1px solid #cbbcf6;
  background: white;
}

.card img {
  width: 36px;
  height: 36px;
}

.close {
  width: 100%;
  padding: 0.6rem;
  border-radius: 10px;
  border: none;
  background: #6a5acd;
  color: white;
}
</style>

<script>
  const modal = document.getElementById("weapon-modal");
  const closeBtn = document.getElementById("close-modal");

  closeBtn?.addEventListener("click", () => {
    modal.classList.add("hidden");
  });

  modal?.addEventListener("click", (e) => {
    if (e.target === modal) modal.classList.add("hidden");
  });
</script>
