---
const { title } = Astro.props;
import BackBtn from "@components/register-login/backBtn.astro";
import BarMenu from "@components/barMenu.astro";
---

<div class="course-header">
  <div class="back-btn">
    <BackBtn />
  </div>
  <span class="course-name">{title}</span>
</div>

<div class="map-wrapper">
  <div class="map">
    <img src="/public/mapa1.png" alt="map-html" />
  </div>
  <div class="leccion1">
    <a href="">
      <img src="/public/leccion1-html.png" alt="" />
    </a>
  </div>
  <div class="leccion2">
    <a href="">
      <img src="/public/leccion2-html.png" alt="" />
    </a>
  </div>
  <div class="leccion3">
    <a href="">
      <img src="/public/leccion3-html.png" alt="" />
    </a>
  </div>
  <div class="leccion4">
    <a href="">
      <img src="/public/leccion4-html.png" alt="" />
    </a>
  </div>
  <div class="leccion5">
    <a href="">
      <img src="/public/html.png" alt="" />
    </a>
  </div>
</div>

<style>
  .course-header {
    /* Mobile-first header: compacto y centrado */
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(2, 1fr);
    align-items: center;
    background-color: rgb(234, 174, 115);
  }

  .back-btn {
    grid-row: 2;
    margin: 3px;

    justify-self: center;
  }

  .course-name {
    grid-row: 2;
    grid-column: 5/8;
    text-align: center;
    font-size: 2rem;
    font-weight: 900;
    color: rgb(255, 255, 255);
  }

  .map-wrapper {
    /* Mobile-first: mapa responsivo y contenedor relativo para posicionar marcadores */
    display: grid;
    grid-template-columns: repeat(30, 1fr);
    grid-template-rows: repeat(15, 42px);
  }

  .map {
    grid-column: 1 / 30;
    grid-row: 2;
  }

  /* Posiciones aproximadas para móvil; se pueden ajustar visualmente */
  .leccion1 {
    grid-column: 2 / 13;
    grid-row: 13;
  }
  .leccion2 {
    grid-column: 3 / 14;
    grid-row: 9;
  }
  .leccion3 {
    grid-column: 18 / 29;
    grid-row: 8;
  }
  .leccion4 {
    grid-column: 7 / 18;
    grid-row: 5;
  }
  .leccion5 {
    grid-column: 21 / 31;
    grid-row: 3;
  }

  @media (min-width: 1024px) {
    .course-header {
      grid-template-columns: repeat(12, 1fr);
      grid-template-rows: 1fr 1fr;
    }

    .back-btn {
      grid-row: 2;
      grid-column: 1 / 2;
      margin: 3px;
    }

    .course-name {
      grid-row: 2;
      grid-column: 6 / 8;
      font-size: 2.5rem;
    }

    .map-wrapper {
      /* Grid más grande para desktop */
      grid-template-columns: repeat(35, 1fr);
      grid-template-rows: repeat(33, 31px);
    }

    .map {
      grid-column: 13 / 23;
      grid-row: 1 / 34;
    }

    .map img {
      /* La imagen ocupa todo el div */
      width: 100%;
      height: 100%;
    }

    /* Ajusta posiciones de las lecciones en desktop */
    .leccion1 {
      grid-column: 13 / 17;
      grid-row: 28;
    }
    .leccion2 {
      grid-column: 14 / 18;
      grid-row: 18;
    }
    .leccion3 {
      grid-column: 20 / 24;
      grid-row: 15;
    }
    .leccion4 {
      grid-column: 14 / 18;
      grid-row: 10;
    }
    .leccion5 {
      grid-column: 20 / 24;
      grid-row: 2;
    }
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .map-wrapper {
      grid-template-columns: repeat(30, 1fr);
      grid-template-rows: repeat(20, 32px);
    }

    .back-btn {
      grid-row: 2;
      grid-column: 1 / 2;
      margin: 3px;
    }

    .course-name {
      grid-row: 2;
      grid-column: 6 / 8;
      font-size: 2.5rem;
    }

    .map-wrapper {
      /* Grid más grande para desktop */
      grid-template-columns: repeat(30, 1fr);
      grid-template-rows: repeat(25, 26px);
    }

    .map {
      grid-column: 8 / 24;
      grid-row: 1 / 26;
    }

    .map img {
      /* La imagen ocupa todo el div */
      width: 100%;
      height: 100%;
    }

    /* Ajusta posiciones de las lecciones en desktop */
    .leccion1 {
      grid-column: 9 / 15;
      grid-row: 21;
    }
    .leccion2 {
      grid-column: 10 / 16;
      grid-row: 14;
    }
    .leccion3 {
      grid-column: 19 / 25;
      grid-row: 11;
    }
    .leccion4 {
      grid-column: 10 / 16;
      grid-row: 8;
    }
    .leccion5 {
      grid-column: 19 / 25;
      grid-row: 2;
    }
  }
</style>
