---
import "../styles/global.css";
const { gradient = "", subtitle = "", image = "", width = "50" } = Astro.props;
---

<div class="circleContainer">
  <div class="circleLinks" style={`background: linear-gradient(${gradient});`}>
    <img src={image} alt={subtitle} width={width} />
  </div>
  <h2 class="circleSubtitle">{subtitle}</h2>
</div>

<style>
  .circleContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .circleLinks {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 1rem;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    box-shadow: 1px 2px 10px rgba(171, 131, 245, 0.58);
  }

  .circleSubtitle {
    font-style: normal;
    font-weight: 400;
    font-size: 0.9rem;
    color: #171155;
  }
</style>
