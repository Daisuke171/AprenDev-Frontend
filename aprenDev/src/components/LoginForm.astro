---
import "../scripts/app.js";
---
<html>
  <body>
    <login-form></login-form>
  </body>
</html>


<style>
  body {
    font-family: system-ui, Arial, sans-serif;
    margin: 24px;
  }
  header {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    margin-top: 16px;
  }
  section {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 16px;
  }
  button {
    padding: 8px 12px;
  }
  form {
    display: grid;
    gap: 8px;
  }
  label {
    display: grid;
    gap: 4px;
  }
  input {
    padding: 8px;
    border: 1px solid #bbb;
    border-radius: 6px;
  }
  pre {
    max-height: 200px;
    overflow: auto;
    background: #f7f7f7;
    padding: 8px;
  }
</style>

