---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>WS + Redis test</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header>
      <h1>Frontend m√≠nimo (HTML + CSS + Canvas + Web Components)</h1>
      <button id="btnPing">Ping</button>
      <button id="btnLogout">Logout</button>
      <span id="wsStatus">WS: desconectado</span>
    </header>

    <main>
      <section>
        <h2>Estado</h2>
        <canvas id="statusCanvas" width="120" height="120"></canvas>
        <pre id="log"></pre>
      </section>

      <section>
        <h2>Registro</h2>
        <register-form></register-form>
      </section>

      <section>
        <h2>Login</h2>
        <login-form></login-form>
      </section>
    </main>

    <script type="module" src="./js/app.js"></script>
  </body>
</html>

<style>
  body {
    font-family: system-ui, Arial, sans-serif;
    margin: 24px;
  }
  header {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    margin-top: 16px;
  }
  section {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 16px;
  }
  button {
    padding: 8px 12px;
  }
  form {
    display: grid;
    gap: 8px;
  }
  label {
    display: grid;
    gap: 4px;
  }
  input {
    padding: 8px;
    border: 1px solid #bbb;
    border-radius: 6px;
  }
  pre {
    max-height: 200px;
    overflow: auto;
    background: #f7f7f7;
    padding: 8px;
  }
</style>
